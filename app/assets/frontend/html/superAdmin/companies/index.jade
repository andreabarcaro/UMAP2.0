section(id="companiesList")
  h1 Lista delle company presenti
  article(ng-repeat="company in companies")
    p {{company.companyName}}
    a(ui-sref="updateCompany({id:company.companyID})") Modifica
    form(ng-submit="deleteCompany(company.companyID)")
      input(type="hidden" ng-model="company.companyName"  value="{{company.companyName}}")
      button(type='submit') Elimina
