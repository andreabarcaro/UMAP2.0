section(id="companiesList")
  ul(class="breadcrumb")
    li
      a(ui-sref="root.superAdmin()") Home
    li(class="active") Gestione Companies
  h1(class="page-header text-center") Lista delle company presenti
    
  button(class="btn btn-success" ui-sref="root.superAdmin.addCompanies()") Nuova
  
  table(class="table")
    thead
      th Id Company
      th Nome
      th Azioni
    tbody
      tr(ng-repeat="company in companies")
        td {{company.companyID}}
        td {{company.companyName}}
        td
          button(class="btn btn-warning" ui-sref="root.superAdmin.updateCompany({id:company.companyID})") Modifica
          form(ng-submit="deleteCompany(company.companyID)")
            button(class="btn btn-danger" type='submit') Elimina 
