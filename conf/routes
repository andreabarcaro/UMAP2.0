# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET         /                           controllers.Assets.at(path="/public", file="html/layout.html")
GET         /testDue                           controllers.ApplicationController.index
GET         /user                            controllers.ApplicationController.user
POST         /test                            controllers.ApplicationController.test
GET         /signOut                         controllers.ApplicationController.signOut
POST        /signIn                          controllers.shared.AuthController.authenticate

POST        /api/users                         controllers.superAdmin.UserController.addUser
GET         /api/users                         controllers.superAdmin.UserController.showUsers
DELETE      /api/users/:id            controllers.superAdmin.UserController.delete(id: java.util.UUID)


GET         /api/companies/:id               controllers.superAdmin.CompanyController.showCompanyDetails(id: java.util.UUID)
PUT         /api/companies/:id               controllers.superAdmin.CompanyController.updateCompany(id: java.util.UUID)
GET         /api/companies               controllers.superAdmin.CompanyController.showCompanies
POST        /api/companies                 controllers.superAdmin.CompanyController.addCompany
DELETE      /api/companies/:id            controllers.superAdmin.CompanyController.delete(id: java.util.UUID)

# Dynamic part of the url
#GET         /views/$template<.+>.html        controllers.ApplicationController.view(template)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                    controllers.Assets.at(path="/public", file)
